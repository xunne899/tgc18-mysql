{{#extends 'base'}}

{{#block 'content'}}
<h1>Confirm delete category</h1>
<form method="POST">
    <div class="alert alert-danger">Are you sure you want to delete the category '{{category.name}}'</div>
    <input type="submit" class="btn btn-danger" value="Confirm"/>
    <a href="/categories" class="btn btn-success">Cancel</a>
</form>
{{/block}}

{{/extends}}